<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="@dimen/dimen_8"
    android:layout_marginLeft="@dimen/dimen_8">


    <TextView
        android:id="@+id/tv_paymentOptiion"
        style="@style/AppTheme.Text.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
      android:textSize="@dimen/dimen_16"
        android:text="@string/payment_option"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_bank_transfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_bank_transfer"
        style="@style/AppTheme.Text.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_blue_gradient"
        android:drawableStart="@drawable/ic_bank_white"
        android:drawableLeft="@drawable/ic_bank_white"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_8"
        android:text="@string/bank_transfer"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_select_beneficiary"
        app:layout_constraintEnd_toStartOf="@+id/tv_cash_payout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/tv_select_beneficiary"
        app:layout_constraintTop_toBottomOf="@id/tv_paymentOptiion" />

    <TextView
        android:id="@+id/tv_cash_payout"
        style="@style/AppTheme.Text.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_blue_border_16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_8"
        android:paddingEnd="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_8"
        android:text="@string/cash_payout"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/tv_bank_transfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_bank_transfer"
        app:layout_constraintTop_toTopOf="@id/tv_bank_transfer"
        tools:layout_editor_absoluteY="12dp" />


    <TextView
        android:id="@+id/tv_select_beneficiary"
        style="@style/AppTheme.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:padding="@dimen/dimen_8"
        android:textColor="@color/black"
        android:text="@string/select_beneficiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_transfer"
        app:layout_constraintVertical_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>