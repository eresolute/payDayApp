<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:paddingTop="@dimen/dimen_16"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_success_checked"
                android:tint="@color/blue" />

            <TextView
                android:id="@+id/tv_alert_message"
                style="@style/AppTheme.Text.Medium.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_12"
                android:gravity="center"
                android:text="@string/successfully_paid"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/dimen_16"
                android:background="@drawable/bg_blue" />

            <TextView
                style="@style/AppTheme.Text.Medium.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dimen_4"
                android:paddingBottom="@dimen/dimen_4"
                android:text="@string/available_balance_text"/>

            <TextView
                android:id="@+id/tv_amount"
                style="@style/AppTheme.Text.Small.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="78999"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@drawable/rounded_text_view"
                android:padding="@dimen/dimen_10" />

            <TextView
                android:id="@+id/tv_action"
                style="@style/AppTheme.Text.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_rounded"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/dimen_8"
                android:text="@string/ok"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

