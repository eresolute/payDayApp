<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_16"
    tools:context=".views2.settings.fingerprint.FingerprintStatusFragment">

    <TextView
        android:id="@+id/tv_fingerprint"
        style="@style/AppTheme.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8"
        android:text="@string/fingerprint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/AppTheme.Text.Body2.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_fingerprint_settings"
        android:drawableLeft="@drawable/ic_fingerprint_settings"
        android:drawablePadding="@dimen/dimen_8"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fingerprint" />

    <Switch
        android:id="@+id/status"
        style="Widget.MaterialComponents.CompoundButton.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_status"
        app:layout_constraintBottom_toBottomOf="@id/tv_status"/>

</android.support.constraint.ConstraintLayout>