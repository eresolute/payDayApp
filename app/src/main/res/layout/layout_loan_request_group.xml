<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16"
    android:layout_marginEnd="@dimen/dimen_16">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Text.Time"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:text="@string/request_id"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toStartOf="@+id/tv_loan_request_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loan_request_id"
        style="@style/AppTheme.Text.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/tv_loan_date"
        app:layout_constraintEnd_toStartOf="@+id/img_arrow"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        style="@style/AppTheme.Text.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:text="@string/date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_loan_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/tv_loan_date"
        style="@style/AppTheme.Text.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_arrow"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/tv_loan_request_id" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView20"
        android:src="@drawable/ic_loan_request"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_loan_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_loan_request_id"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/app_name"/>

</android.support.constraint.ConstraintLayout>