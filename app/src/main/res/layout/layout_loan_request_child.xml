<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4"
        android:paddingBottom="@dimen/dimen_4"
        android:text="@string/time"
        style="@style/AppTheme.Text.Time"
        android:layout_marginStart="@dimen/dimen_42"
        android:layout_marginLeft="@dimen/dimen_42"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toStartOf="@+id/tv_loan_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_loan_time"
        style="@style/AppTheme.Text.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:layout_marginEnd="@dimen/dimen_42"
        android:layout_marginRight="@dimen/dimen_42"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toTopOf="@+id/tv_loan_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        style="@style/AppTheme.Text.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_4"
        android:paddingBottom="@dimen/dimen_4"
        android:text="@string/status"
        android:layout_marginStart="@dimen/dimen_42"
        android:layout_marginLeft="@dimen/dimen_42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_loan_status"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/tv_loan_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_4"
        android:paddingLeft="@dimen/dimen_4"
        android:paddingTop="@dimen/dimen_4"
        android:paddingEnd="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_4"
        android:drawablePadding="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_42"
        android:layout_marginRight="@dimen/dimen_42"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/tv_loan_time" />
</android.support.constraint.ConstraintLayout>