<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.RegisterScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dimen_10"
    app:cardElevation="@dimen/dimen_10"
    app:cardUseCompatPadding="true"
    tools:context=".views2.registration.RegisterCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_24"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/payday_card_reg" />

        </LinearLayout>

        <android.support.design.button.MaterialButton
            android:id="@id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/scan_payday_card"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/btn_primary_color"
            app:cornerRadius="@dimen/button_corner"
            app:rippleColor="@color/btn_secondary_color" />

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Text.Small.Bold"
            android:text="@string/or"
            android:gravity="center"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_manually"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:text="@string/enter_manually"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="@dimen/button_corner"
            app:rippleColor="@color/grey" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
