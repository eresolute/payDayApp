<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginStart="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:layout_marginEnd="@dimen/dimen_48"
        android:layout_marginBottom="@dimen/dimen_4"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="5.0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_10"
                android:text="@string/choose_language"
                android:fontFamily="@font/comfortaa_bold"
                android:textStyle="bold"
                style="@style/AppTheme.Text.Small"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/grey_400"/>

            <android.support.v7.widget.RecyclerView
                android:id="@id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_48"
        android:layout_marginStart="@dimen/dimen_48"
        android:layout_marginRight="@dimen/dimen_48"
        android:layout_marginEnd="@dimen/dimen_48"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginBottom="@dimen/dimen_16"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="5.0dp">

        <TextView android:id="@id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_8"
            android:gravity="center"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa_bold"
            android:background="?attr/selectableItemBackground"
            style="@style/AppTheme.Text.Small"/>

    </android.support.v7.widget.CardView>

</LinearLayout>