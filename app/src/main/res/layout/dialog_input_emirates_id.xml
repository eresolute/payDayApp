<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginEnd="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dimen_16">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView45"
                style="@style/AppTheme.Text.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_8"
                android:text="@string/card_number"
                app:layout_constraintBottom_toTopOf="@id/til_emirates_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_emirates_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/grey"
                app:boxCornerRadiusBottomEnd="@dimen/input_text_corner"
                app:boxCornerRadiusBottomStart="@dimen/input_text_corner"
                app:boxCornerRadiusTopEnd="@dimen/input_text_corner"
                app:boxCornerRadiusTopStart="@dimen/input_text_corner"
                app:layout_constraintBottom_toTopOf="@+id/textView43"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView45">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_emirates_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxLength="9"
                    android:textAlignment="center"
                    android:textDirection="ltr"
                    tools:ignore="UnusedAttribute" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_dismiss"
                style="@style/AppTheme.Text.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="8dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_10"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/button_corner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_proceed"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_eligible_title"
                app:layout_constraintVertical_bias="0.0"
                app:rippleColor="@color/btn_secondary_color"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="1dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_proceed"
                style="@style/AppTheme.Text.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="8dp"
                android:text="@string/proceed"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="@dimen/button_corner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_dismiss"
                app:layout_constraintTop_toBottomOf="@+id/textView43"
                app:layout_constraintVertical_bias="1.0"
                app:rippleColor="@color/btn_secondary_color" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_16"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:text="@string/enter_emirates_card_number"
                style="@style/AppTheme.Text.Time"
                android:textColor="@color/grey_700"
                app:layout_constraintBottom_toTopOf="@+id/btn_dismiss"
                app:layout_constraintEnd_toEndOf="@+id/til_emirates_id"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/til_emirates_id"
                app:layout_constraintTop_toBottomOf="@+id/til_emirates_id" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

