<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_4">

    <TextView
        android:id="@+id/tv_products"
        style="@style/AppTheme.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_bill_payment"
        android:drawableLeft="@drawable/ic_bill_payment"
        android:drawablePadding="@dimen/dimen_8"
        android:gravity="center"
        android:padding="@dimen/dimen_8"
        android:text="@string/app_name"
        android:textColor="@color/textColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_apply"
        app:layout_constraintEnd_toStartOf="@+id/tv_apply"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_apply"
        style="@style/AppTheme.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_square"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_4"
        android:paddingRight="@dimen/dimen_16"
        android:paddingBottom="@dimen/dimen_4"
        android:text="@string/apply"
        android:gravity="center"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingEnd="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16" />
</android.support.constraint.ConstraintLayout>