<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/textColor</item>
        <!-- Keyboard Show for OTP PIN View Library -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ProgressDialog">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:paddingStart">@dimen/dimen_8</item>
        <item name="android:paddingLeft">@dimen/dimen_8</item>
        <item name="android:paddingEnd">@dimen/dimen_8</item>
        <item name="android:paddingRight">@dimen/dimen_8</item>
    </style>

    <style name="AppTheme.NoActionBar.White">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextIntro" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
    </style>

    <style name="AppTheme.RegisterScreen">
        <item name="android:paddingLeft">@dimen/dimen_28</item>
        <item name="android:paddingRight">@dimen/dimen_28</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
    </style>

    <style name="AppTheme.GradientButton">
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:paddingLeft">@dimen/dimen_4</item>
        <item name="android:paddingRight">@dimen/dimen_4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.BottomBar">
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_x_small</item>
    </style>

    <!--Text-->
    <style name="AppTheme.Text" />

    <style name="AppTheme.Text.Date" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Time" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Time.Bold" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Time.Small" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Time.Small.Bold" parent="TextAppearance.Compat.Notification.Time">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Small.Bold" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Medium.Bold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Large.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Body1.Bold" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Body3" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Body2.Bold" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="AppTheme.Text.Title.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Small.AccountInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_account_info</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Text.Small.AccountInfo.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_account_info_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Buttons-->
    <style name="AppTheme.Button" />

    <style name="AppTheme.Button.Intro">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="AppTheme.MonthPickerDialogStyle" />

    <style name="TextTitleStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/textColor</item>
        <item name="android:windowTitleStyle">@style/TextTitleStyle</item>
    </style>

    <!--BottomSheet-->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/text_10</item>
        <item name="fontFamily">@font/comfortaa</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="WeeklyTimings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="WeeklyTimings.Start">
        <item name="android:layout_marginLeft">@dimen/dimen_8</item>
        <item name="android:layout_marginRight">@dimen/dimen_4</item>
    </style>

    <style name="WeeklyTimings.End">
        <item name="android:layout_marginLeft">@dimen/dimen_4</item>
        <item name="android:layout_marginRight">@dimen/dimen_8</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="AppTheme.Button.Material">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/btn_primary_color</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="rippleColor">@color/btn_secondary_color</item>
    </style>

    <style name="AppTheme.Text.Error" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextInputLayout" />

    <style name="TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_corner</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_corner</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_corner</item>
    </style>

    <style name="ProgressBarSmall" parent="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressBarSmall.Orange" parent="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small">
        <item name="colorControlActivated">@color/btn_primary_color</item>
    </style>

</resources>
